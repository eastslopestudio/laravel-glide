{
  "name": "eastslopestudio/laravel-glide",
  "description": "Dynamic image handling with Glide for Laravel.",
  "license": "MIT",
  "authors": [
    {
      "name": "Ryan Scherler",
      "email": "ryan@eastslope.studio",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "spatie/laravel-package-tools": "^1.14.0",
    "illuminate/contracts": "^10.0",
    "league/glide-laravel": "^1.0",
    "league/flysystem-aws-s3-v3": "^3.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^7.9",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^8.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-arch": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "spatie/laravel-ray": "^1.26"
  },
  "autoload": {
    "psr-4": {
      "Eastslopestudio\\Glide\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eastslopestudio\\Glide\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "scripts-descriptions": {
    "analyse": "Run PHPStan static analysis against the package."
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Eastslopestudio\\Glide\\GlideServiceProvider"
      ],
      "aliases": {
        "Glide": "Eastslopestudio\\Glide\\Facades\\Glide"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
